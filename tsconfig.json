{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": false,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "inlineSourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@app": ["src/app"],
      "@configs/*": ["src/configs/*"],
      "@controllers/*": ["src/controllers/*"],
      "@decorators/*": ["src/decorators/*"],
      "@enums/*": ["src/enums/*"],
      "@errors": ["src/errors"],
      "@filters/*": ["src/filters/*"],
      "@guards/*": ["src/guards/*"],
      "@inputs/*": ["src/inputs/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@pipes/*": ["src/pipes/*"],
      "@resolvers/*": ["src/providers/resolvers/*"],
      "@services/*": ["src/providers/services/*"],
      "@strategies/*": ["src/providers/strategies/*"],
      "@subscriptions/*": ["src/subscriptions/*"],
      "@topics/*": ["src/topics/*"],
      "@utils/*": ["src/utils/*"],
      "@mocks/*": ["test/mocks/*"]
    }
  },
  "include": ["src", "test", "prisma"],
  "exclude": ["node_modules"]
}
